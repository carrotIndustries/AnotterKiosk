#!/bin/bash

NETWORK_CONFIG=/boot/firmware/network-interfaces
NETWORK_CONFIG_DEST=/tmp/network-interfaces

if [ -f "${NETWORK_CONFIG}" ]; then
	cp "${NETWORK_CONFIG}" "${NETWORK_CONFIG_DEST}"
else
	cat >"${NETWORK_CONFIG_DEST}" <<EOF
source /etc/network/interfaces.d/*

auto lo
iface lo inet loopback

auto eth0
allow-hotplug eth0
iface eth0 inet dhcp
iface eth0 inet6 auto

auto wlan0
allow-hotplug wlan0
iface wlan0 inet dhcp
	wpa-conf /etc/wpa_supplicant/wpa_supplicant.conf

iface wlan0 inet6 auto
EOF

fi
